section#musicModule.module.container.px-5
  .jumbotron.bg-transparent.pb-0.mb-5
    h1.display-4.text-center Music

  .card.bg-transparent.shadow.p-3
    #musicAPIError.alert.alert-danger.d-none
    .card-header.bg-transparent.row
      .col
        h5 Player
        .media.now-playing
          - const track = player.q.length > 0 ? player.q.items[0] : null;
          if track
            img.float-left.mr-2(src=track.thumbnail)
            .media-body.ml-2.mt-3
              h2 #{track.title}
              p.lead #{track.author.name}
      .col.mt-5
        .controls.row
          .col-3
          .col-6.buttons
            button#toggleTrack.btn.text-gradient #[i.fas.fa-play]
            button#stopTrack.btn.text-gradient #[i.fas.fa-square]
            button#skipTrack.btn.text-gradient #[i.fas.fa-forward]
            button#shuffleList.btn.text-gradient #[i.fas.fa-random]
          .col-3#volume
            i.fas.fa-volume-up.text-gradient
            input.form-control(type='range')
        #seekTrack
          input.form-control(type='range')
          .position
            span.current 00:00
            span.text-muted.px-1 /
            span.duration.text-muted 00:00
        
    .card-body
      h5 Queue
      .q-control.mb-3
        label Search
          input.form-control
        button#trackSearch.ml-2.mb-1.btn.btn-gradient +
      .track-list
        each track in player.q.items
          .media
            img.mr-3(src=track.thumbnail)
            .media-body
              .float-left
                h5.mt-0 #{track.title}
                p.lead #{track.author.name}
              .float-right
                span.text-muted #{track.duration.timestamp}
                button.remove.btn.text-danger x
        else
          p No tracks here...